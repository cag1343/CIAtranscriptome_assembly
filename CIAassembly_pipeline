import pandas as pd
from pathlib import Path

metadata = pd.read_table(
    (Path(workflow.basedir) / "config/units.tsv"), 
    dtype=str
    ).set_index(["sample"], drop=False)

# Add a workspace_path variable pointing to 
# data/file.fastq etc. 
metadata['workspace_path'] = (metadata['path']
    .map(lambda x: str(Path('data') / Path(x).name))
)

# add mapper attribute to metadata from config file
# either starlong or minimap2
metadata['mapper'] = (metadata['sample_type']
    .map(lambda x: config['mapper'][x])
)

def meta_attr(attr='path', df=metadata)
    "Return a function taking wildcards and returning the 
    given attribute, return the given in the metadata table."
    def inner(wc):
        return df[df['sample' == str(wc.sample)]][attr]
    return inner

print("Starting CIA assembly with metadata object: {}".format(metadata))

localrules: all

rule all:
    input:
        expand("assembly/flair/{sample}_collapsed_annot.edp.tss/"
               "{sample}.isoforms.gtf", sample=SAMPLE)

rule symlink_annotation:
    input: 
        lambda wc: config["annotation"][wc.annotation]
    output: 
        "annotation/{annotation}"
    shell: 
        "ln -fs `readlink -f {input}` {output}"

def _find_path(wc):
    "Return the path of the file with the given basename wc.basename."
    return metadata[metadata['workspace_path'].endswith(str(wc.basename))]


rule symlink_data: 
    input: 
        _find_path
    output: 
        "data/{basename}"
    shell:
        "ln -fs `readlink -f {input}` {output}"


rule minimap_idx:
    input: 
        target="annotation/genome.fa"
    output: 
        "index/minimap2/genome.mmi"
    params:
        extra="-k 14"
    threads: 
        16
    wrapper: 
        "v1.20.0/bio/minimap2/index"

rule star_index:
    input:
        fasta="annotation/genome.fasta",
        gtf="annotation/transcriptome.gtf"
    output:
        directory("index/star"),
    threads: 16
    params:
        extra="--genomeSAindexNbases 12",
    log:
        "logs/star_index.log",
    wrapper:
        "v1.20.0/bio/star/index"

rule minimap_align:
    input:
        fastq=
        genome="annotation/genome.fa",
        index="index/minimap2/genome.mmi"
    output:
        bam="mapping/minimap2/{sample}.bam",
    threads: 
        16
    env: 
        "envs/minimap_samtools.yaml"
    shell: 
        "minimap2 -t {threads} "
        "-ax splice -uf "
        "{input.genome} "
        "{input.fastq} | "
        "samtools sort -@ {threads} -o {output.bam} -; "

def _to_zcat(wc):
    "If sample ends with gz, then add zcat"
    sample_path = metadata[metadata['sample'] == wc.sample]['path']
    if sample_path.endswith('gz'):
        return '--readFilesCommand zcat'
    else:
        return ''

rule starlong_align: 
    input: 
        data=meta_attr,
        genome="index/star"
    output: 
        'mapping/starlong/{sample}.bam'
    conda: 
        "envs/star.yaml"
    threads: 16
    params: 
        zcat=_to_zcat,
        prefix='mapping/starlong/{sample}'
    shell: 
        "STARlong --genomeDir {input.genome} "
        "--readFilesIn {input.data} "
        "--outFileNamePrefix {params.prefix} "
        "--runThreadN {threads} "
        "--outFilterMultimapScoreRange 20 "
        "--outFilterScoreMinOverLread 0 "
        "--outFilterMatchNminOverLread 0.66 "
        "--outFilterMismatchNmax 1000 "
        "--winAnchorMultimapNmax 200 "
        "--seedSearchStartLmax 12 "
        "--seedPerReadNmax 100000 "
        "--seedPerWindowNmax 100 "
        "--alignTranscriptsPerReadNmax 100000 "
        "--alignTranscriptsPerWindowNmax 10000 "
        "--outSAMtype BAM SortedByCoordinate "
        "{params.zcat}; "

rule samtools_index:
    input:
        "{prefix}.bam",
    output:
        "{prefix}.bam.bai",
    params:
        extra="",  # optional params string
    threads: 4  # This value - 1 will be sent to -@
    wrapper:
        "v1.20.0/bio/samtools/index"

